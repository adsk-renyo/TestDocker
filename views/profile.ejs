<!-- Embedded JavaScript -->
<!DOCTYPE html>
<html>
    <head>
        <%include ./partials/headlinks%>
    </head>

    <body>
        <%include ./partials/header%>

        <!-- other parts -->
        <div class="container">
            <div class="row row-offcanvas row-offcanvas-right">

                <ul class="nav nav-tabs" role="tablist" id="myTab">
                    <li role="presentation" class="active"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Profile</a></li>
                    <li role="presentation"><a href="#preference" aria-controls="preference" role="tab" data-toggle="tab">preference</a></li>
                    <li role="presentation"><a href="#portal" aria-controls="portal" role="tab" data-toggle="tab">portal</a></li>
                </ul>

                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane active" id="profile">
                        <hr>
                        <div class="col-xs-12 col-sm-9">
                            <p class="pull-right visible-xs">
                                <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
                            </p>
                            <div class="jumbotron">
                                <div class="alert alert-danger hide" id="signUpErrMsg"></div>
                                <form action="/updateUser" method="post" id="userSettingpForm">
                                    <div class="form-group">
                                        <label>User Name</label>
                                        <input type="text" class="form-control" name="username" value="<%=user.local.username%>">
                                    </div>
                                    <div class="form-group">
                                        <label>First Name</label>
                                        <input type="text" class="form-control" name="firstName" value="<%=user.local.firstName%>">
                                    </div>
                                    <div class="form-group">
                                        <label>Last Name</label>
                                        <input type="text" class="form-control" name="lastName" value="<%=user.local.lastName%>">
                                    </div>
                                    <div class="form-group">
                                        <label>Email</label>
                                        <input type="text" class="form-control" name="email" id="formEmailId" value="<%=user.local.email%>">
                                    </div>
                                    <div class="form-group">
                                        <label>Password</label>
                                        <input type="password" class="form-control" name="password" id="formPasswordId">
                                    </div>
                                    <div class="form-group">
                                        <label>Confirm Password</label>
                                        <input type="password" class="form-control" name="confirmPassword" id="formConfirmPasswordId">
                                    </div>

                                    <div class="modal-footer">
                                        <button type="submit" class="btn btn-warning btn-lg">Update</button>
                                    </div>
                                </form>
                            </div>
                        </div><!--/.col-xs-12.col-sm-9-->
                    </div>
                    <div role="tabpanel" class="tab-pane" id="preference">
                        <hr>
                        <div class="btn-group">
                            <a class="btn btn-default dropdown-toggle btn-select2" data-toggle="dropdown" href="#">Select a Region <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="#">English</a></li>
                                <li><a href="#">Chinese (中文)</a></li>
                            </ul>
                        </div>
                    </div>
                    <div role="tabpanel" class="tab-pane" id="portal">
                        <hr>
                        <div class="col-xs-12 col-sm-9">
                            <p class="pull-right visible-xs">
                                <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
                            </p>
                            <div class="jumbotron">
                                <div class="alert alert-danger hide" id="signUpErrMsg"></div>
                                <form action="/updateUser" method="post" id="userSettingpForm">
                                    <div class="form-group">
                                        <label>Email</label>
                                        <input type="text" class="form-control" name="email" id="formEmailId" value="<%=user.local.email%>">
                                    </div>
                                    <div class="form-group">
                                        <label>First Name</label>
                                        <input type="text" class="form-control" name="firstName" value="<%=user.local.firstName%>">
                                    </div>
                                    <div class="form-group">
                                        <label>Last Name</label>
                                        <input type="text" class="form-control" name="lastName" value="<%=user.local.lastName%>">
                                    </div>
                                    <div class="form-group">
                                        <label>Password</label>
                                        <input type="password" class="form-control" name="password" id="formPasswordId">
                                    </div>

                                    <div class="modal-footer">
                                        <button type="submit" class="btn btn-warning btn-lg">Update</button>
                                    </div>
                                </form>
                            </div>
                        </div><!--/.col-xs-12.col-sm-9-->
                    </div>
                </div>
            </div><!--/row-->
            <hr>

            <%include ./partials/footer%>
        </div><!--/.container-->
        <%include ./partials/bodylinks%>
        <script>
            $(document).ready(function () {
                $("#preference .dropdown-toggle").html($("#preference .dropdown-menu li:nth-child(2)").text() + ' <span class="caret"></span>');
            });
            $(".dropdown-menu li a").click(function () {
                var selText = $(this).text();
                $(this).parents('.btn-group').find('.dropdown-toggle').html(selText + ' <span class="caret"></span>');
            });            
        </script>
    </body>
</html>

